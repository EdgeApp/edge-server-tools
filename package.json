{
  "name": "edge-server-tools",
  "version": "0.1.0",
  "private": false,
  "description": "Tools for common backend & couchdb related utility functions",
  "repository": "https://github.com/EdgeApp/edge-server-tools",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "fix": "yarn lint --fix",
    "lint": "eslint .",
    "precommit": "lint-staged && yarn prepare",
    "prepare": "npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "dependencies": {
    "@types/node": "^14.0.22",
    "body-parser": "^1.19.0",
    "cleaners": ">=0.2.1",
    "commander": "^6.1.0",
    "cors": "^2.8.5",
    "nano": "^9.0.3",
    "node-fetch": "^2.6.1",
    "prop-types": ">= 15.5.10 < 16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.22.0",
    "eslint-config-standard-kit": "^0.15.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": ">=3.0.0",
    "lint-staged": ">=9.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^1.0.0",
    "rimraf": "^3.0.2",
    "sucrase": "^3.12.1",
    "typescript": "^3.8.2"
  }
}
